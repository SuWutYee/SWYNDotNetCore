@model List<ChartModel>

<div id="chart"></div>

@section scripts{
    <script>

        var options = {
            series: [{
                name: 'TEAM A',
                type: 'column',
                data: @JsonConvert.SerializeObject(Model.Select(x=>x.TeamA).ToArray())
            }, {
                name: 'TEAM B',
                type: 'area',
                data: @JsonConvert.SerializeObject(Model.Select(x=>x.TeamB).ToArray())
            }, {
                name: 'TEAM C',
                type: 'line',
                data: @JsonConvert.SerializeObject(Model.Select(x=>x.TeamC).ToArray())
            }],
            chart: {
                height: 350,
                type: 'line',
                stacked: false,
            },
            stroke: {
                width: [0, 2, 5],
                curve: 'smooth'
            },
            plotOptions: {
                bar: {
                    columnWidth: '50%'
                }
            },

            fill: {
                opacity: [0.85, 0.25, 1],
                gradient: {
                    inverseColors: false,
                    shade: 'light',
                    type: "vertical",
                    opacityFrom: 0.85,
                    opacityTo: 0.55,
                    stops: [0, 100, 100, 100]
                }
            },
            labels: @Html.Raw(JsonConvert.SerializeObject(Model.Select(x=>x.Label).ToArray())),
            markers: {
                size: 0
            },
            xaxis: {
                type: 'datetime'
            },
            yaxis: {
                title: {
                    text: 'Points',
                },
                min: 0
            },
            tooltip: {
                shared: true,
                intersect: false,
                y: {
                    formatter: function (y) {
                        if (typeof y !== "undefined") {
                            return y.toFixed(0) + " points";
                        }
                        return y;

                    }
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();

    </script>
}