@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h4>Blog</h4>
<a href="/BlogAjax/Create" class="btn btn-outline-success">New</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(++count)</th>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
                <td>
                    <a href="/BlogAjax/Edit/@item.BlogId" class="btn btn-warning">Edit</a>
                    <button type="button" class="btn btn-danger btnDelete" data-blog-id="@item.BlogId">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(".btnDelete").click(function () {
            let blogId = $(this).data("blog-id");

            Swal.fire({
                title: "Confirm",
                text: "Are you sure want to delete?",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes"
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteBlog(blogId);
                }
            });
        });

        function deleteBlog(id) {
            let _reqModel = {
                BlogId: id
            };
            $.ajax({
                url: "/BlogAjax/Delete",
                data: { blog: _reqModel },
                type: "POST",
                dataType: "json",
                success: function (result) {
                    console.log(result);
                    if (result.IsSuccess) {
                        Swal.fire({
                            title: "Success",
                            text: result.Message,
                            icon: "success",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.href = "/BlogAjax";
                            }
                        });
                    }
                    else {
                        Swal.fire({
                            title: "Error!",
                            text: result.Message,
                            icon: "error"
                        });
                    }
                },
                error: function (errormessage) {
                    console.log(errormessage);
                }
            });
        }
    </script>
}
